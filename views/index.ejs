<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Drone</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <link rel="stylesheet" href="/css/style.css" />

    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/nodecopter.js"></script>
    <script type="text/javascript" src="/js/scripts.js"></script>
</head>
<body>
<div class="container">
    <div class="video">
        <h1 class="display-4">Drone</h1>
        <div id="droneStream"></div>
    </div>
    <div class="commands">
        <p>
            <button value="kill" class="btn btn-danger" style="margin-right: 20px;">Kill</button>
            <button value="fly" class="btn btn-primary" style="margin-right: 20px;">Fly</button>
            <button value="manual" class="btn btn-warning" style="margin-right: 20px;">Start Manual</button>
        </p>
    </div>
    <div class="col keys uppercase">
        <ul id="keyboard">
            <li class="letter" id="q">q</li>
            <li class="letter" id="w">w</li>
            <li class="letter" id="e">e</li>
            <li class="letter" id="r">r</li>
            <li class="letter" id="t">t</li>
            <li class="spacing firstitem"></li>
            <li class="letter" id="a">a</li>
            <li class="letter" id="s">s</li>
            <li class="letter" id="d">d</li>
            <li class="letter" id="f">f</li>
            <li class="letter" id="g">g</li>
        </ul>
    </div>
    <div class="info">
        <div class="bottom">
        <div class="alt"><h3>Altitude:</h3> <h4 id="altitude">0</h4></div>
        <div class="bat"><h3>Battery:</h3> <h4 id="batteryPercentage">0</h4></div>
    </div>
</div>

<script type="text/javascript">
   new NodecopterStream(document.getElementById("droneStream"));
</script>
</body>
</html>